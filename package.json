{
  "name": "the-novelist",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "npm run build-electron && ./node_modules/.bin/electron dist/",
    "build-electron": "ng build --base-href . && cp src/electron/* dist/",
    "packageLinux": "npm run build-electron && electron-packager . the-novelist --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=release-builds",
    "packageWindows": "npm run build-electron && electron-packager . the-novelist --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds",
    "packageMac": "npm run build-electron && electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds",
    "create-installer-win": "node installers/windows/createinstaller.js",
    "installerWin": "npm run packageWindows && npm run create-installer-win",
    "installerDeb": "npm run packageLinux && electron-installer-debian --src release-builds/the-novelist-linux-x64/ --arch amd64 --config debian.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.10",
    "@angular/cdk": "^5.2.5",
    "@angular/common": "^5.2.10",
    "@angular/compiler": "^5.2.10",
    "@angular/core": "^5.2.10",
    "@angular/forms": "^5.2.10",
    "@angular/http": "^5.2.10",
    "@angular/material": "^5.2.5",
    "@angular/platform-browser": "^5.2.10",
    "@angular/platform-browser-dynamic": "^5.2.10",
    "@angular/router": "^5.2.10",
    "bootstrap": "^4.1.0",
    "core-js": "^2.5.5",
    "file-saver": "^1.3.8",
    "font-awesome": "^4.7.0",
    "hammerjs": "^2.0.8",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.3",
    "rxjs": "^5.5.10",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "1.7.4",
    "@angular/compiler-cli": "^5.2.10",
    "@angular/language-service": "^5.2.10",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^9.6.6",
    "codelyzer": "^4.3.0",
    "electron": "^1.8.4",
    "electron-packager": "^12.0.1",
    "electron-winstaller": "^2.6.4",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^1.0.0",
    "protractor": "~5.3.1",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "^2.8.3"
  }
}
