{
  "name": "the-novelist",
  "productName": "The Novelist",
  "version": "0.0.1",
  "description": "A simple Software for writers",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "the.novelist",
    "productName": "The Novelist",
    "category": "Writing",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "author": "Dennis Kirschstein <dennis@dennis-kirschstein.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.46.9"
  }
}
